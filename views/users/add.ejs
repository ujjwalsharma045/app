<% include ../layouts/header %>
<form action="adduser" method="post" enctype="multipart/form-data">
       <%
	   if(errors.length>0){
		   %>
		   <ul>
		     <%
			 for(var i=0; i<errors.length; i++){
			     %>
			     <li style="color:red">
				    <%= errors[i] %>   
				 </li>
			     <%
			 }
			 %>
		   </ul>
		   <%
	   }
	   %>
	   
	   <div> 
		   <label>First Name</label>
		   <span>
			  <input type="text" name="first_name" value="<% if(typeof data.first_name!="undefined"){ %> <%= data.first_name;  %> <% } %>"/>
		   </span>
	   </div>
	   
	   <div>
		 <label>Last Name</label>
		 <span>
		   <input type="text" name="last_name" value="<% if(typeof data.last_name!="undefined"){ %> <%= data.last_name;  %> <% } %>"/>
		 </span>
	   </div>
	   
	   <div>
		   <label>Email</label>
		   <span>
			  <input type="text" name="email" value="<% if(typeof data.email!="undefined"){ %> <%= data.email;  %> <% } %>"/>
		   </span>
	   </div>
	   
	   <div>
		   <label>Username</label>
		   <span>
			  <input type="text" name="username" value="<% if(typeof data.username!="undefined"){ %> <%= data.username;  %> <% } %>"/>
		   </span>
	   </div>
	   
	   <div>
		   <label>Password</label>
		   <span>
			  <input type="password" name="password" value=""/>
		   </span>
	   </div>
	   
	   <div>
		 <label>Address</label>
		 <span>
		   <input type="text" name="address" value="<% if(typeof data.address!="undefined"){ %> <%= data.address;  %> <% } %>"/>
		 </span>
	   </div>

       <div>
		 <label>Profile Image</label>
		 <span>
		   <input type="file" name="myprofile" value=""/>
		 </span>
	   </div>	   

	   <div>
		   <label>City</label>
		   <span>
			  <input type="text" name="city" value="<% if(typeof data.city!="undefined"){ %> <%= data.city;  %> <% } %>"/>
		   </span>
	  </div>
	  
	  <div>
		 <label>State</label>
		 <span>
		   <input type="text" name="state" value="<% if(typeof data.state!="undefined"){ %> <%= data.state;  %> <% } %>"/>
		 </span>
	  </div>
	   
	  <div> 
		 <label>Zipcode</label>
		 <span>
		   <input type="text" name="zip_code" value="<% if(typeof data.zipcode!="undefined"){ %> <%= data.zipcode;  %> <% } %>"/>
		 </span> 
	  </div>
	  
	  <input type="submit" value="Submit"/>
</form>
<% include ../layouts/footer %>